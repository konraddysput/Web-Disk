@model WebDisk.Web.Models.Login.RegisterViewModel


<div class="row">
    <div class="col-md-6 col-md-offset-3 col-xs-offset-1 col-xs-10">
        <div class="card">

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="text-center">
                    <h2>Zarejestruj</h2>
                </div>

                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-md-10 col-xs-10 col-md-offset-1 col-xs-offset-1">
                        <div class="form-group label-floating">
                            @Html.LabelFor(m => m.UserName, new { @class = "control-label required" })
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-10 col-xs-10 col-md-offset-1 col-xs-offset-1">
                        <div class="form-group label-floating">
                            @Html.LabelFor(m => m.Email, new { @class = "control-label required" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-10 col-xs-10 col-md-offset-1 col-xs-offset-1">
                        <div class="form-group label-floating">
                            @Html.LabelFor(m => m.Password, new { @class = "control-label required" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-10 col-xs-10 col-md-offset-1 col-xs-offset-1">
                        <div class="form-group label-floating">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label required" })
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-md-11 padding-0">
                        <input type="submit" class="btn btn-default pull-right" value="Zarejestruj" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
